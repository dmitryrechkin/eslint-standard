	  "@stylistic/eslint-plugin": "^5.0.0",
	  "eslint-plugin-jsdoc": "^50.0.0",
	  "eslint-plugin-simple-import-sort": "^12.0.0",
	  "eslint-plugin-perfectionist": "^4.0.0"
	},
	"devDependencies": {
	  "@typescript-eslint/eslint-plugin": "^8.36.0",
	  "@typescript-eslint/parser": "^8.36.0",
